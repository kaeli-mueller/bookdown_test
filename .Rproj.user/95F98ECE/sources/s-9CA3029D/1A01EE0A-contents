bookdown::gitbook:
  css: style.css
  config:
    toc: 
      before: |
        <li><a href="./">A Minimal Book Example</a></li>
      after: |
        <li><a href="https://github.com/rstudio/bookdown" target="blank">Published with bookdown</a></li>
    sharing: 
      facebook: no
      github: yes
    download: ["pdf", "epub"]
bookdown::pdf_book:
  includes:
    in_header: preamble.tex
  latex_engine: xelatex
  citation_package: natbib
  keep_tex: yes
bookdown::epub_book: default

#toc = table of contents
#you can change the text in the quotes to what you want
#building a book is like knitting and you can do it repeatedly as you make changes
